<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregar_sensor">

    <Button
        android:id="@+id/Id_sensor01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Sensor 1" />

    <Button
        android:id="@+id/Id_sensor02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Id_sensor01"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Sensor 2" />

    <Button
        android:id="@+id/Id_sensor03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Id_sensor02"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Sensor 3" />

</RelativeLayout>